<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "amazon.backend.model.WorldMessage" table = "world_message">

        <meta attribute = "class-description">
            This class contains the world message detail.
        </meta>

        <id name = "sequenceNum" type = "long" column = "sequence_num"/>

        <property name = "acked" column = "acked" type = "boolean"/>
        <property name = "sentTime" column = "sent_time" type = "long"/>
        <property name = "simspeed" column = "simspeed" type = "int"/>
        <property name = "disconnect" column = "disconnect" type = "boolean"/>
    </class>
</hibernate-mapping>